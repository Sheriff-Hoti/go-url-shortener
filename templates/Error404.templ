package templates

templ Error404() {
	@BaseLayout() {
		<div class="text-center">
			<h1 class="text-4xl font-bold text-red-600">404 Not Found</h1>
			<p class="mt-4 text-lg text-gray-300">The page you are looking for does not exist.</p>
			<a href="/" class="mt-6 inline-block px-6 py-3 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition-colors">
				Go to Home
			</a>
		</div>
	}
}
